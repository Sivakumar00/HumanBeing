<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friends_single_image"
            android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="10dp" android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/friends_single_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/friends_single_image"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/friends_single_image"
            android:paddingBottom="5dp"
            android:text="User name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friends_single_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/friends_single_image"
            android:layout_alignLeft="@+id/friends_single_name"
            android:layout_alignStart="@+id/friends_single_name"
            android:paddingTop="5dp"
            android:text="Hey there , I'm using ChatOn"
            android:textAlignment="viewStart"
            android:textColor="#d6cece"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>
