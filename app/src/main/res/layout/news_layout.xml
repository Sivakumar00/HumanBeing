<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/article_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/article_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="25dp"
            android:freezesText="false"
            android:lines="2"
            android:maxLines="2"
            android:maxWidth="300dp"
            android:text="TextView"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/article_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/article_titles"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/article_titles"
            android:layout_below="@+id/article_desc"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/article_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/article_titles"
            android:layout_alignStart="@+id/article_titles"
            android:layout_below="@+id/article_titles"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:lines="4"
            android:text="TextView"
            android:textColor="#b7f9f7f7"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>