<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pool_pic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/txtVehicle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/pool_pic"
        android:layout_toRightOf="@+id/pool_pic"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtDest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="5dp"
        android:text="Destination"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare"
        android:textSize="20sp"
        android:layout_below="@+id/txtDest"
        android:layout_marginTop="11dp"
        android:layout_alignStart="@+id/txtDest" />

    <ImageView
        android:id="@+id/vheicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:srcCompat="@drawable/car"
        android:layout_above="@+id/txtDest"
        android:layout_alignParentEnd="true" />

</RelativeLayout>