<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="siva.com.weengineers.StartActivity"><![CDATA[

    "
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    ]]>

    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorAccent"
        android:padding="20dp"
        android:text="@string/need_new_account"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/start_already_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_reg_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="?android:attr/colorPrimary"
        android:text="ALREADY HAVE AN ACCOUNT" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/logo_one"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_already_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:fontFamily="casual"
        android:text="a Social Network app "
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="28sp"
        android:textStyle="bold" />

</RelativeLayout>
